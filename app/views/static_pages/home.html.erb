<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
          <h3>Micropost Feed</h3>
          <%= render 'shared/feed' %>
        </section>
      </aside>
      <div class="col-md-8">
        <!-- Calendar goes here! -->
        <h3>Calendar</h3>
        <%= render 'shared/calendar' %>
        <!-- Calendar ends here! -->
      </div>
    </div>
<% else %>

  <div class="center jumbotron">
    <h1>Get connected with ConnectYou!</h1>

    <h2>
      The best way to ConnectYour schedule with your family and friends!
    </h2>
    <p>
    <%= link_to image_tag("calendar-icon.png", alt: "Connect You"),
                'https://connectyouapp.herokuapp.com/' %>
    </p>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>


<% end %>