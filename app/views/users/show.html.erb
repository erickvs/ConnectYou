<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <%= render 'follow_form' if logged_in? %>
      <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
          <%= will_paginate @microposts %>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <!-- Calendar goes here! -->
    <h3>Calendar</h3>
    <%= render 'shared/calendar' %>
    <!-- Calendar ends here! -->
  </div>
</div>